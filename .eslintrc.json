{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react",
        "prettier"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "prettier/prettier": [
          "error",
          {
            "printWidth": 80,
            "singleQuote": true,
            "semi": true,
            "tabWidth": 2,
            "arrowParens": "always",
            "endOfLine": "auto",
            "plugins": ["prettier-plugin-tailwindcss"]
          }
        ]
      }
}
